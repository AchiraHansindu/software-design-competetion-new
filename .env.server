# ====================================
# TRANSFORMER MANAGEMENT SYSTEM
# SERVER DEPLOYMENT Environment Variables
# ====================================
# Use this for deploying backend to a server
# Replace YOUR_SERVER_IP with your actual server IP address

# ====================================
# APPLICATION CONFIGURATION
# ====================================
APP_NAME=software-design-project-final
SPRING_PROFILES_ACTIVE=docker

# ====================================
# DATABASE CONFIGURATION
# ====================================
DB_URL=jdbc:mysql://mysql-db:3306/transformer_db
DB_USERNAME=transformer_user
DB_PASSWORD=transformer_secure_password_2025
DB_DRIVER=com.mysql.cj.jdbc.Driver
DB_DDL_AUTO=update

# ====================================
# JPA/HIBERNATE CONFIGURATION
# ====================================
JPA_SHOW_SQL=false
JPA_FORMAT_SQL=false
JPA_DIALECT=org.hibernate.dialect.MySQLDialect
JPA_DATABASE_PLATFORM=org.hibernate.dialect.MySQLDialect

# ====================================
# SERVER CONFIGURATION
# ====================================
SERVER_PORT=8080
SERVER_MAX_HEADER_SIZE=1MB
SERVER_MAX_SWALLOW_SIZE=10MB

# ====================================
# FILE UPLOAD CONFIGURATION
# ====================================
FILE_UPLOAD_DIR=/app/uploads/images/
FILE_MAX_FILE_SIZE=10485760
FILE_MAX_SIZE=10MB
FILE_MAX_REQUEST_SIZE=10MB
FILE_UPLOAD_ENABLED=true

# ====================================
# CORS CONFIGURATION - SERVER DEPLOYMENT
# ====================================
# IMPORTANT: Replace YOUR_SERVER_IP with your actual server IP
# Example: CORS_ALLOWED_ORIGINS=http://localhost:3000,http://192.168.1.100:3000
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://YOUR_SERVER_IP:3000,http://127.0.0.1:3000

# ====================================
# LOGGING CONFIGURATION
# ====================================
LOG_HIBERNATE_SQL=WARN
LOG_HIBERNATE_BINDER=WARN
LOG_JDBC_TEMPLATE=WARN
LOG_JDBC_UTILS=WARN
LOG_APP_LEVEL=INFO
LOG_ROOT_LEVEL=INFO

# ====================================
# ACTUATOR/MONITORING CONFIGURATION
# ====================================
MANAGEMENT_ENDPOINTS_ENABLED=true
MANAGEMENT_HEALTH_SHOW_DETAILS=when-authorized

# ====================================
# MYSQL DOCKER CONFIGURATION
# ====================================
MYSQL_ROOT_PASSWORD=mysql_root_password_2025
MYSQL_DATABASE=transformer_db
MYSQL_USER=transformer_user
MYSQL_PASSWORD=transformer_secure_password_2025
